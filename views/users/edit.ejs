<%- include ../layouts/header.ejs %>
<div class="page-data">
    <form method="post" action="/users/edit/<%=data[0].id%>">
        <table cellpadding="11">
            <tr>
                <td class="label">Email</td>
                <td><input type="text" name="email" value="<%=data[0].email%>" required /></td>
            </tr>
            <tr>
                <td class="label">Name</td>
                <td><input type="text" name="name" value="<%=data[0].name%>" required /></td>
            </tr>
            <tr>
                <td class="label">Surname</td>
                <td><input type="text" value="<%=data[0].surname%>" name="surname" required /></td>
            </tr>
            <tr>
                <td class="label">Salary</td>
                <td><input type="text" name="salary" value="<%=data[0].salary%>" required /></td>
            </tr>
            <tr>
                <td class="label">Phone</td>
                <td><input type="text" name="phone" value="<%=data[0].phone%>" required /></td>
            </tr>
            <tr>
                <td class="label">Country</td>
                <td><input type="text" name="country" value="<%=data[0].country%>" required /></td>
            </tr>
            <tr>
                <td class="label"></td>
                <td>
                    <button type="submit">Save</button>
                    <button type="button" onClick="cancelAddDb()">Cancel</button>
                </td>
            </tr>
        </table>
    </form> 
</div>
<%- include ../layouts/footer.ejs %>
